{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": ".",
		"sourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"maxNodeModuleJsDepth": 0,
		"types": [],
		"strictNullChecks": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"strict": false,
		"allowJs": true,
		"checkJs": false,
		"noImplicitAny": false
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}