{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": ".",

		"inlineSourceMap": true,
		"inlineSources": true,

		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"maxNodeModuleJsDepth": 0,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
		"types": [],
		"strictNullChecks": false,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"strict": false,
		"allowJs": true,
		"checkJs": false,
		"noImplicitAny": false
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}